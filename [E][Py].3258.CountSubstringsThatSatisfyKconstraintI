class Solution(object):
    def countKConstraintSubstrings(self, s, k):
        """
        :type s: str
        :type k: int
        :rtype: int
        """
        count = 0

        for i in range(0, len(s)):
            n_of_0 = 0
            n_of_1 = 0

            if s[i] == '0':
                n_of_0 += 1
            else:
                n_of_1 += 1

            if n_of_0 <= k or n_of_1 <= k:
                count += 1

            for j in range(i + 1, len(s)):
                if s[j] == '0':
                    n_of_0 += 1
                else:
                    n_of_1 += 1

                if n_of_0 <= k or n_of_1 <= k:
                    count += 1

        return count
        
